<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="tc.data.dao.StudentDAO">

    <select id="selectById" resultType="tc.model.Student" >
        select * from student where id = #{id}
    </select>

    <select id="selectByName" resultType="tc.model.Student">
        select * from student where name = #{name}
    </select>

    <insert id="insert" parameterType="tc.model.Student">
        insert into student (bankid, password, `name`) values (#{bankid},
         #{password}, #{name})
    </insert>

</mapper>